@model ClinicLog.Web.Models.PatientRequest

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PatientRequests</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subscject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (!User.IsInRole(Roles.Doctor))
        {
            <dt class="col-sm-2">
                Doctor
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.FullName)
            </dd>
        }
        @if (User.IsInRole(Roles.Doctor) || User.IsInRole(Roles.Admin))
        {
            <dt class="col-sm-2">
                Patient
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.FullName)
            </dd>
        }
        </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
